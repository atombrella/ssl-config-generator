{{#if form.hsts}}
<filters>
  <response-header name="strict-transport-security" header-name="Strict-Transport-Security" header-value="max-age=31536000; includeSubDomains;"/>
</filters>
{{/if}}

{{#if form.ocsp}}
<filters>
  <response-header name="strict-transport-security" header-name="Strict-Transport-Security" header-value="max-age=31536000; includeSubDomains;"/>
</filters>
{{/if}}

<configuration>
    <authentication-client xmlns="urn:elytron:1.0">
    <authentication-client xmlns="urn:elytron:1.4">
        <ssl-contexts>
            <default-ssl-context name="..."/>
            <ssl-context name="...">
                <key-store-ssl-certificate>
                </key-store-ssl-certificate>
                <trust-store key-store-name="..." />
                <cipher-suite selector="..." />
                <cipher-suite selector="..." names="..." />
                <protocol names="{{#each output.protocols}} {{this}}{{/each}}" />
            </ssl-context>
        </ssl-contexts>
    </authentication-client>
</configuration>

